{% extends '::base.html.twig' %}
{% block body %}
<div class="page-header">
    <h1>WorkGroup list</h1>
</div>

<table class="records_list table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            {# <th>Description</th> #}
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('group_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            {# <td>{{ entity.description }}</td> #}
            <td>
                <div class="btn-group" >
                    
	                <a class="btn btn-mini" href="{{ path('group_show', { 'id': entity.id }) }}">show</a>
                    
	                <a class="btn btn-mini" href="{{ path('group_edit', { 'id': entity.id }) }}">edit</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('group_new') }}">
    Create a new entry
</a>
{% endblock %}
