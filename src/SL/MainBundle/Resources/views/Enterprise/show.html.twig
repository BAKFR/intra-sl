{% extends '::base.html.twig' %}
{% block body %}
<div class="page-header">
    <h1>Enterprise</h1>
</div>

<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Statut</th>
            <td>{{ entity.statut }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Start_date</th>
            <td>{{ entity.startdate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th></th>
            <td>
                <a href="{{ path('enterprise_test', {'id_enterprise': entity.id }) }}" class="btn" >Voir les logs !</a>
            </td>
        </tr>
    </tbody>
</table>

<div class="row" >
    <div class="record_actions span2 offset1">
        <a class="btn" href="{{ path('enterprise') }}">
            Back to the list
        </a>
    </div>
        <div class="record_actions span1 offset1">
        <a class="btn" href="{{ path('enterprise_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </div>
                <form class="offset1 span1 offset1" action="{{ path('enterprise_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>{% endblock %}
