{% extends '::base.html.twig' %}
{% block body %}
<div class="page-header">
	<h1>Enterprise edit</h1>
</div>

<form class="well" action="{{ path('enterprise_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn" >Edit</button>
    </p>
</form>

<div class="row" >
    <div class="record_actions span2 offset1">
        <a class="btn" href="{{ path('enterprise') }}">
            Back to the list
        </a>
    </div>
    <form class="offset1 span1 offset1" action="{{ path('enterprise_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
</div>{% endblock %}
